<div class="col-xs-12 col-sm-6 col-md-4">
  <div class="fadista">
    <div class="fadista-photo" style="background: linear-gradient(to bottom,rgba(20,20,20, 0.8),rgba(76,76,76,0.2) 30%), url(<%= dead_player.photo_url %>) center / cover no-repeat;"></div>
    <div class="fadista-details">
      <div class="fadista-name">
        <%= dead_player.full_name %>
      </div>
      <div class="fadista-row">
        <span class="fadistas-fame">
          <%= dead_player.fame.capitalize %>
        </span> |
        <span class="fadista-reviews_count">34 reviews</span>
      </div>
    </div>
    <div class="fadista-action text-center">
      <%= link_to "View", dead_player_path(dead_player), class: "btn btn-default btn-primary"  %>
    </div>
  </div>
</div>
